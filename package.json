{
	"name": "nodechallenge",
	"version": "1.0.0",
	"description": "NodeJS Challenge",
	"main": "src/server.js",
	"type": "module",
	"scripts": {
		"test": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --verbose --detectOpenHandles --forceExit",
		"dev": "NODE_ENV=development nodemon --exec babel-node -r dotenv/config src/server.js",
		"build": "babel src --out-dir dist --ignore src/**/*.test.js",
		"start": "NODE_ENV=production node dist/server.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/betonajera9/NodeChallenge.git"
	},
	"keywords": [
		"Node",
		"challege"
	],
	"author": "BetoNajera",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/betonajera9/NodeChallenge/issues"
	},
	"homepage": "https://github.com/betonajera9/NodeChallenge#readme",
	"dependencies": {
		"@babel/runtime": "^7.15.4",
		"@sentry/node": "^6.13.2",
		"@sentry/tracing": "^6.13.2",
		"babel-jest": "^27.2.4",
		"chalk": "^4.1.2",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"helmet": "^4.6.0",
		"log-symbols": "^5.0.0",
		"mongodb": "^4.1.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.15.7",
		"@babel/core": "^7.15.5",
		"@babel/node": "^7.15.4",
		"@babel/plugin-transform-modules-commonjs": "^7.15.4",
		"@babel/plugin-transform-runtime": "^7.15.0",
		"@babel/preset-env": "^7.15.6",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.1.0",
		"jest": "^27.2.4",
		"nodemon": "^2.0.13",
		"prettier": "^2.4.1",
		"regenerator-runtime": "^0.13.9"
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true,
			"jest": true
		},
		"extends": [
			"standard",
			"prettier"
		],
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"rules": {}
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"htmlWhitespaceSensitivity": "css",
		"jsxBracketSameLine": true,
		"jsxSingleQuote": true,
		"printWidth": 80,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "es5",
		"useTabs": true,
		"vueIndentScriptAndStyle": false
	},
	"babel": {
		"env": {
			"test": {
				"presets": [
					"@babel/preset-env",
					{
						"modules": "commonjs"
					}
				]
			},
			"production": {
				"presets": [
					"@babel/preset-env",
					{
						"modules": false
					}
				]
			}
		},
		"plugins": [
			"@babel/plugin-transform-runtime",
			[
				"@babel/plugin-transform-modules-commonjs",
				{
					"allowTopLevelThis": true
				}
			]
		]
	},
	"jest": {
		"testEnvironment": "node",
		"transform": {}
	}
}
